<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="red-gradient">
<header>
    <%- include('layouts/navBar') -%>
</header>

<main>
    <section class="container">
        <div class="row justify-content-center align-items-center" style="margin-top: 170px; margin-bottom: 110px;">
            <div class="col-lg-12">
                <h1 class="display-4 text-center fw-bold text-white mb-3">Login Page</h1>
            </div>
            <div class="col-lg-4">
                <form action="/login/user" method="post" enctype="multipart/form-data">
                    <label for="username" class="form-label text-white">Username</label>
                    <input type="text" name="username" required class="form-control mb-3" id="username">
                    <label for="password" class="form-label text-white">Password</label>
                    <input type="password" name="password" required class="form-control mb-3" id="password">
                    <% if(loggedIn) { %>
                        <p class="text-white mb-3">
                            Need an account? <a href="/register" class="text-white fw-bold">Become</a> a member.
                        </p>
                    <% } %>
                    <button class="btn btn-primary rounded-pill" type="submit">login now</button>
                </form>
            </div>
        </div>
    </section>
</main>

<%- include('layouts/footer') -%>
</body>
</html>