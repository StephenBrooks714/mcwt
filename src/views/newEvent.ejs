<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="bg-red-gradient">
<header>
    <%- include('layouts/navbar') -%>
</header>

<main>
    <div class="container" style="margin-top: 180px; margin-bottom: 110px;">
        <section class="row justify-content-center">
            <div class="col-lg-10 mb-2">
                <h1 class="h1 mb-3">Add An Event</h1>
                <form action="/store/event" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="eventName">Event Name</label>
                                <input type="text" name="title" id="eventName" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="eventUrl">Event Url</label>
                                <input type="url" name="eventUrl" id="eventUrl" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="startDate">Start Date</label>
                                <input type="text" name="startDate" id="startDate" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="startTime">Start Time</label>
                                <input type="text" name="startTime" id="startTime" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="endDate">End Date</label>
                                <input type="text" name="endDate" id="endDate" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-6 mb-2">
                            <div class="form-group">
                                <label for="endTime">End Time</label>
                                <input type="text" name="endTime" id="endTime" class="form-control mb-2" required />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" id="description" class="form-control mb-3" rows="5"></textarea>
                                <button class="btn btn-outline-light" type="submit">upload the event</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</main>

<%- include('layouts/footer') -%>

</body>
</html>