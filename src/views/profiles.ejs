<!doctype html>
<html lang="en" data-bs-theme="dark">
<%- include("layouts/header") -%>
<body style="background-color: black;">

<div class="row">
    <div class="col-2 text-center">
        <header>
            <%- include("layouts/adminNav") -%>
        </header>
    </div>
    <div class="col-10">
        <div class="container-fluid my-3">
            <div class="row">
                <div class="col-6">
                    <h1 class="h4 mb-5 fw-bold">All MCWT Members</h1>
                </div>
                <div class="col-6 text-end">
                    <a href="/dashboard" class="btn-sm btn btn-primary">Dashboard</a>
                </div>
                <% for(i=0; i < profiles.length; i++) { %>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= profiles[i].fName %> <%= profiles[i].lName %></h5>
                                <p class="card-text"><%= profiles[i].email %></p>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= profiles[i]._id %>">
                                    <%= profiles[i].fName %> <%= profiles[i].lName %>
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="<%= profiles[i]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel"><%= profiles[i].username %></h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <img src="<%= profiles[i].imageUrl %>" class="img-fluid" alt="<%= profiles[i].fName %> <%= profiles[i].lName %>">
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <p>
                                                                <%= profiles[i].bio %>
                                                            </p>
                                                            <small> <strong>Joined:</strong> <%= profiles[i].joinedDate.toLocaleString() %></small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <a href="/deleteUser/<%= profiles[i]._id %>" type="button" class="btn btn-warning">Delete User</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/js/styles.js"></script>
</body>
</html>