<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="bg-red-gradient">
<header>
    <%- include('layouts/navBar') -%>
</header>

<main class="container" style="margin-top: 160px; margin-bottom: 70px;">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-12 mb-4">
            <h1 class="h2 text-center mb-2">Our Upcoming Events</h1>
            <p class="text-center mb-6">
                Here you will find all of our upcoming events. <br> If you would like to host an event, please contact us.
            </p>
            <div class="row justify-content-center">
                <% for(i=0; i < events.length; i++) { %>
                    <div class="col-lg-4">
                        <div class="card">
                            <h3 class="card-title mb-3"><%= events[i].title %></h3>
                            <p class="mb-3 card-text"><%= events[i].description.substring(0, 140) %></p>
                            <p class="mb-3 card-footer">
                                <strong>Start Date</strong> <%= events[i].startDate %> on <%= events[i].startTime %>
                                <br>
                                <strong>End Date</strong> <%= events[i].endDate %> on <%= events[i].endTime %>
                            </p>
                            <a href="<%= events[i].eventUrl %>" class="btn btn-primary" target="_blank">
                                Go To Event
                            </a>
                            <% if(loggedIn) { %>
                                <a href="/delete/event/<%= events[i]._id %>" class="btn btn-danger">Delete Event</a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="col-lg-12">
            <%- include("components/social-media-sharing") -%>
        </div>
    </div>
</main>

<%- include('layouts/footer') -%>

<!-- MDB -->
</body>
</html>