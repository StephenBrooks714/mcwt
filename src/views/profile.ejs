<!DOCTYPE html>
<html lang="en" data-mdb-theme="dark">
<%- include('layouts/header') -%>
<body class="bg-red-gradient">
<header>
    <%- include('layouts/navBar') -%>
</header>

<main class="container" style="margin-top: 180px; margin-bottom: 110px;">
    <div class="row justify-content-center text-white align-items-center">
        <div class="col-lg-6 mb-3">
            <img src="<%= profile.imageUrl %>" class="img-fluid mb-2" alt="<%= profile.fName %> <%= profile.lName %>">
            <br>
            <% if(loggedIn) { %>
                <a href="/delete/user/<%= profile._id %>" class="btn btn-outline-light">delete profile</a>
            <% } %>
        </div>
        <div class="col-lg-6 mb-3">
            <small class="mb-2"><%= profile.username %></small>
            <h1 class="mb-2"><%= profile.fName %> <%= profile.lName %></h1>
            <p class="mb-3">
                <%= profile.bio %>
            </p>
            <p class="mb-3">
                <strong>Member Since</strong> <br> <%= profile.joinedDate.toString() %>
            </p>
            <a href="mailto:<%= profile.email %>" class="btn btn-outline-light">Email Me</a>
        </div>
    </div>
</main>

<%- include('layouts/footer') -%>

<!-- MDB -->
<script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.umd.min.js"
></script>
</body>
</html>